<h1>Jobs#show</h1>
<p>Find me in app/views/jobs/show.html.erb</p>

<div class="container">
  <div class="box">
    <h3 class="text-center"><%= @supplier.first_name %></h3>
    <p><%= @price %></p>
    <p>Job completed: <%= @job.completed %></p>
    <ul>
      <%= @supplier.talents.each do |talent| %>
        <li class="talent-item">
          <div class="text">
            <%= talent.name %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
