<div class="row">
  <div class="col-xs-12 col-sm-6 col-sm-offset-3">
    <div class="box">
       <div class="title-center">
       <h1 class="text-to-center">Edit your Profile</h1>
      </div>
      <%= simple_form_for(@user, url: profiles_update_path) do |f| %>
        <!-- [...] -->

        <%= f.input :first_name%>
        <%= f.input :last_name%>
        <%= f.input :city%>
        <%= f.input :genre%>
        <%= f.input :bio%>
        <%= f.input :main_job%>
        <%= f.input :avatar %>
        <%= f.input :avatar_cache, as: :hidden %>
        <%= f.input :banner %>
        <%= f.input :banner_cache, as: :hidden %>

        <!-- [...] -->
        <%= f.button :submit, class:"btn-success btn-centered" %>
      <% end %>
</div>
</div>
</div>
