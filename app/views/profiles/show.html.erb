<div class="container">
  <div class="banner-profile">
    <% if @user.banner.filename.nil? %>
      <%= image_tag "noprofilepicture.png", height: 350, width: 1065%>
    <% else  %>
      <%= cl_image_tag @user.banner.url(:banner_image)%>
    <% end %>
  </div>

  <div class="profile-page">
    <div class="profile-bar">
      <% if @user.avatar.filename.nil? %>
      <%= image_tag "noprofilepicture.png", height: 206, width: 206, class: "profile-pic" %>
      <% else  %>
      <%= cl_image_tag @user.avatar.url(:profile_picture), class: "profile-pic" %>
      <% end  %>

      <div class="profile-details">
        <h1 class="profile-name"><%= "#{@user.first_name.capitalize} #{@user.last_name.capitalize}"%></h1>
        <p>
          Main skill: <span class="values"><%= @user.main_job if @user.main_job %></span> -
          Genres: <span class="values"><%= @user.genre if @user.genre %></span> -
          Based in <span class="values"><%= @user.city.capitalize if @user.city %></span>
        </p>
      </div>

      <% if current_user.id == @user.id %>
        <%= link_to "Edit Profile", edit_profile_path, class: "btn btn-success btn-lg request" %>
      <% else %>
        <%= link_to "Send a request", new_profile_job_path(@user), class: "btn btn-success btn-lg request" %>
      <% end %>
    </div>

    <div class="row profile-content">

      <div class="col-xs-12 col-md-8">
        <div class="box bio">
          <h2 class="box-title">Bio :</h2>
          <p><%= @user.bio %></p>
        </div>
      </div>

      <div class="col-xs-12 col-md-4">
        <div class="box skills">
          <h2>Skills :</h2>
          <ul class="skills-list">
            <% @user.talents.each do |talent| %>
            <li><h4><%= talent.name %></h4></li>
            <% end %>
          </ul>
        </div>
      </div>

      <div class="col-xs-12">
        <div class="box text-center album-box">
          <h2>Albums :</h2>
          <div class="albums">
            <%= cl_image_tag("https://res.cloudinary.com/twerk/image/upload/v1534936368/album_covers/quidenousdeux.jpg", height: 150, width: 150, border: '2px_solid_black') %>
            <%= cl_image_tag("https://res.cloudinary.com/twerk/image/upload/v1534936367/album_covers/pills.jpg", height: 150, width: 150, border: '2px_solid_black') %>
            <%= cl_image_tag("https://res.cloudinary.com/twerk/image/upload/v1534936367/album_covers/ours.jpg", height: 150, width: 150, border: '2px_solid_black') %>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>


